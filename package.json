{
  "name": "screen-ppd",
  "description": "A web app for calculating the pixels per degree of a screen",
  "author": "QasimK",
  "repository": {
    "type": "git",
    "url": "https://github.com/QasimK/screen-ppd"
  },
  "bugs": "https://github.com/QasimK/screen-ppd/issues",
  "scripts": {
    "lint": "standard --verbose ./src/js/**/*.js | snazzy",
    "lint-fix": "standard --fix ./src/js/**/*.js",
    "start": "webpack-dev-server --content-base ./dist/ --open",
    "build": "webpack -p --mode production",
    "build:dev": "webpack -d --mode development",
    "watch:dev": "webpack -d --mode development --watch",
    "deploy": "git checkout origin/master && git subtree split --prefix dist -b gh-pages && git push -f origin gh-pages:gh-pages && git branch -D gh-pages && git checkout -"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.5",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "foundation-sites": "^6.5.1",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "~3.3.1",
    "node-sass": "^4.11.0",
    "pixels-per-degree": "git://github.com/qasimk/pixels-per-degree.git",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {},
  "private": true
}
